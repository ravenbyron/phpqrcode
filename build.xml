<?xml version="1.0" encoding="UTF-8"?>
<project name="phpqrcode2" default="test">
	<target name="clear">
		<delete dir="tests/report" />
	</target>

	<target name="prepare">
		<mkdir dir="tests/report" />
	</target>

	<target name="phpunit">
		<phpunit printsummary="true" bootstrap="tests/bootstrap.php">
			<formatter todir="tests/report" type="xml" />
			<batchtest>
				<fileset dir="tests">
					<include name="**/*Test.php" />
				</fileset>
			</batchtest>
		</phpunit>

		<phpunitreport infile="tests/report/testsuites.xml" todir="tests/report" />
	</target>

	<target name="test" depends="clear, prepare, phpunit" />
</project>
